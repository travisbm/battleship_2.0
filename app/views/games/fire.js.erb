$(".shots").html("Shots: <%= @game.shots %>");
$(".score").html("Score: <%= @game.score %>");
$(".boats").html("<%= @game.boats %>");
$(".vessels").html("<%= @game.vessels %>");
$(".carriers").html("<%= @game.carriers %>");

<% if @cell[:status] == "hit" %>
  $("[data-row='<%=@row%>'][data-column='<%=@col%>']").css("background", "red")
<% elsif @cell[:status] == "miss" %>
  $("[data-row='<%=@row%>'][data-column='<%=@col%>']").css("background", "grey")
<% end %>
