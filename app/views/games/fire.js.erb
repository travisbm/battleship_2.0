$(".score").html("Shots: <%= @game.shots %> Score: <%= @game.score %>");
$(".boats").html("Boats: <%= @game.boats %>");
$(".vessels").html("Vessels: <%= @game.vessels %>");
$(".carriers").html("Carriers: <%= @game.carriers %>");

<% if @cell[:status] == "hit" %>
  $(".cell_<%= @row %>_<%= @col %>").css("background", "red")
<% elsif @cell[:status] == "miss" %>
  $(".cell_<%= @row %>_<%= @col %>").css("background", "grey")
<% end %>
